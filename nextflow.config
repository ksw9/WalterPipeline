
docker {
    
    enabled = true

}

process {

	errorStrategy				= 'ignore'

    withLabel: local {
    	executor				= 'local'
    }

    withLabel: slurm {
    	executor				= 'slurm'
    	clusterOptions			= '-A ucgd-rw --partition ucgd-rw -N 1'
    }

}

params {
    
	// Main files/directories

	reads_list     				= "path/to/reads/list"

    kraken_database             = "path/to/database"

    reference_fasta             = "path/to/fasta"

    bwa_index_path              = "path/to/bwa/index"

    bowtie_index_path           = "path/to/bowtie2/index"

    bowtie_index_prefix         = "index_prefix"

    gatk_dictionary             = "path/to/dictionary"

    bed_path                    = "path/to/bed"

    vcf_header                  = "path/to/vcf_header"

    snpeff                      = "path/to/snpEff.jar"

    snpeff_db                   = "Mycobacterium_tuberculosis_h37rv"

    snpeff_datapath             = "path/to/snpEff_data"

    // Main variables

    mapper                      = "bwa"

    variant_caller              = "gatk"

}